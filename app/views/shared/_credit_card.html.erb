
<div class="row">
  <div class="col-sm-6 col-sm-offset-3">
    <form action="/subscriptions" method="POST" id="payment-form">
      <span class="payment-errors"></span>

      <div class="form-group">
        <label>Card Number</label>
          <input type="text" size="20" class="form-control" data-stripe="number"/>
      </div>

      <div class="form-group">
        <label>CVC</label>
          <input type="text" size="4" class="form-control" data-stripe="cvc"/>
      </div>

      <div class="form-group">
        <label>Expiration (MM/YYYY)</label>
          <input type="text" size="2" class="form-control" data-stripe="exp-month"/>
        <span> / </span>
        <input type="text" size="4" class="form-control" data-stripe="exp-year"/>
      </div>

      <button type="submit" method="POST" class="btn btn-primary">Submit Payment</button>
    </form>
  </div>
</div>

<%= javascript_include_tag "https://js.stripe.com/v2/" %>

<script type="text/javascript">
  Stripe.setPublishableKey(STRIPE_PUBLISHABLE_KEY);
</script>
